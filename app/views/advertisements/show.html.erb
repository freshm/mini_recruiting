<div class="page-header">
  <%= link_to advertisements_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_advertisement_path(@advertisement), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show advertisement</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @advertisement.title %></dd>

  <dt>Location:</dt>
  <dd><%= @advertisement.location %></dd>

  <dt>Description:</dt>
  <dd><%= @advertisement.description %></dd>

  <dt>Standort:</dt>
  <dd><%= @advertisement.standort %></dd>

  <dt>Requirement:</dt>
  <dd><%= @advertisement.requirement %></dd>

</dl>
