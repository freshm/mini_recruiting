<div class="page-header">
  <%= link_to advertisements_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_advertisement_path(@advertisement), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @advertisement.title %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Location:</dt>
  <dd><%= @advertisement.location %></dd>

  <dt>Description:</dt>
  <dd><%= @advertisement.description %></dd>

  <dt>Requirement:</dt>
  <dd><%= @advertisement.requirement %></dd>
  
  <%= link_to "Apply now!", "#", class: "btn btn-primary pull-right" %>

</dl>


