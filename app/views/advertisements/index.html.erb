<div class="page-header">
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to new_admin_advertisement_path, :class => 'btn btn-primary pull-right' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Advertisement
    <% end %>
  <% end %>
  <h1>Current advertisements</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Description</th>
            <% if user_signed_in? %>
            <th>Applied?</th>
            <% end %>
            <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @advertisements) do |advertisement| %>
            <td><%= advertisement.title%></td>
            <td><%= advertisement.location%></td>
            <td><%= advertisement.requirement%></td>
            <% if user_signed_in? && advertisement.already_taken_by_user?(current_user) %>
              <td class="text-center"><i class="icon-ok" style="color: green"></i></td>
            <% elsif user_signed_in? && !advertisement.already_taken_by_user?(current_user) %>
              <td class="text-center"><i class="icon-minus" style="color: red"></i></td>
            <% end %>
            <td class="text-center inline">
                <%= link_to "", advertisement, class: "icon-eye-open"%>&nbsp;
            </td>
      <% end %>
    </tbody>
  </table>
</div>
