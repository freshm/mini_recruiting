<div class="page-header">
  <%= link_to new_advertisement_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Advertisement
  <% end %>
  <h1>Listing advertisements</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Description</th>
            <th>Standort</th>
            <th>Requirement</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @advertisements) do |advertisement| %>
            <td><%= advertisement.title %></td>
            <td><%= advertisement.location %></td>
            <td><%= advertisement.description %></td>
            <td><%= advertisement.standort %></td>
            <td><%= advertisement.requirement %></td>
            <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
