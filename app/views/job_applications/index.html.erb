<div class="page-header">
  <%= link_to new_job_application_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Job application
  <% end %>
  <h1>Listing job_applications</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Wage</th>
            <th>Note</th>
            <th>Applicant</th>
            <th>Advertisement</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @job_applications) do |job_application| %>
            <td><%= job_application.wage %></td>
            <td><%= job_application.note %></td>
            <td><%= job_application.applicant_id %></td>
            <td><%= job_application.advertisement_id %></td>
            <td><%= link_to 'Show', job_application %></td>
        <td><%= link_to 'Edit', edit_job_application_path(job_application) %></td>
        <td><%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
