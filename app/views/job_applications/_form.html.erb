<div class="col-md-offset-2 col-md-8">
  <%= semantic_form_for([:vacancy, @job_application], :html => { :class => "form-horizontal" }) do |f| %>
    <% if @job_application.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@job_application.errors.count, "error") %> prohibited this job_application from being saved:</h4>

        <ul>
        <% @job_application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.inputs :name => "Your details" do %>
        <%= f.input :salary, :input_html => { :style => "height: 32px", class: "form-control"} %>
        <%= f.input :note, :input_html => { :class => 'autogrow form-control', :rows => 6, :cols => 20 } %>
    <% end %>
    <br/>
    

    <%= f.actions do %>
        <%= f.action :submit, :as => :button, button_html: { class: "btn btn-primary btn-lg"} %>
    <% end %>
  <% end %>
</div>