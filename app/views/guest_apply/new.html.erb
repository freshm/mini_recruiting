<div class="row">
  <%= semantic_form_for @applicant, url: guest_create_path do |f| %>
  <div class="row">
    <div class="col-md-6 gray-bg">
      <div class="page-header">
        <h1>Sign up</h1>
      </div>
        <%= f.inputs :name => "Personal" do %>
            <%= f.input :firstname %>
            <%= f.input :lastname %>
            <%= f.input :email %>
        <% end %>
        
        <%= f.inputs :name => "Security" do %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
        <% end %>
        <br />
    </div>
    
    <div class="col-md-6">
      <div class="page-header">
        <h1>Application for <%= @advertisement.title %></h1>
      </div>
      <%= f.semantic_fields_for :job_application, @applicant.job_applications.build do |h| %>
        <%= h.inputs :name => "Your application details" do %>
            <%= h.input :wage, :input_html => { :style => "height: 25px"} %>
            <%= h.input :note, :input_html => { :class => 'autogrow', :rows => 6, :cols => 20 } %>
        <% end %>
      <% end %>
    </div>
  </div>
    
  <br />
  <div class="row col-md-offset-5">
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
    <% end %>
  </div>
  <% end %>
</div>
