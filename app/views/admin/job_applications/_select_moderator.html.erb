<div class="row select-manager">
	<div class="pull-right col-md-4 well">
		<%= semantic_form_for(@assignment, remote: true) do |f| %>
			<%= f.inputs do %>
				<div class="input-group">
					<%= f.input :manager, :include_blank => false, input_html: { class: "form-control" } %>
				</div>
				<%= f.input :job_application, as: :hidden, input_html: { value: @job_application.id } %>
			<% end %>
			<br />
			<%= f.actions do %>
				<%= f.action :submit, as: :button, label: "Forward to manager", button_html: { class: "btn btn-info btn-sm pull-right " } %>
			<% end %>
		<% end %>
	</div>
</div>