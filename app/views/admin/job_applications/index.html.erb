<div class="row">
  <%= render "admin/sidebar" %>
  <div class="col-md-10">
    <div class="page-header">
      <h1>Applications for Advertisements</h1>
    </div>
    
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Advertisement</th>
                <th>Applicants for this Advertisement</th>
                <th>Created at</th>
          </tr>
        </thead>
    
        <tbody>
          <%= content_tag_for(:tr, @advertisements, class: "hover") do |advertisement| %>
                <td><%= link_to advertisement.title, admin_job_application_path(advertisement) %></td>
                <td class="text-center"><%= link_to advertisement.job_applications.count, admin_job_application_path(advertisement) %></td>
                <td><%= link_to advertisement.created_at, admin_job_application_path(advertisement) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
