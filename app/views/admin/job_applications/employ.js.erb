$(".alert").remove();
$(".page-header").after("<div class=\"alert alert-success alert-dismissable\"><button type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-hidden=\"true\">&times;</button>Employed <%= @job_application.user.fullname %> for <%=@job_application.vacancy.title %>").slideDown();
var reviewed = "#h_reviewed"
if ($(reviewed)) {
	$(reviewed).remove();
}

var user = $("#user_<%= @job_application.user.id %>");
user.appendTo($(".accordion_employed"));
user.find($(".new-option")).remove();
user.collapse();

<%# Decrements the amount of the Reviewed Tab%>
var amount_first_tab = parseInt($("#tab_3").text());
amount_first_tab--;
$("#tab_3").text(amount_first_tab);

<%# Increments the amount of the Employed Tab%>
var amount_new_tab = parseInt($("#tab_4").text());
amount_new_tab++;
$("#tab_4").text(amount_new_tab);

if (amount_first_tab == 0) {
	$(".accordion_reviewed").append("<h4 id=\"h_reviewed\">There are no reviewed applications.</h4>");
}