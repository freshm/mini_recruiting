<%= semantic_form_for([:admin, @user], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this job_application from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.inputs name: "Personal" do %>
      <%= f.input :firstname %>
      <%= f.input :lastname %>
      <%= f.input :email %>
  <% end %>

  <%= f.inputs name: "Security" do %>
      <%= f.input :password, label: "New Password" %>
  <% end %>
  
  <br /> 
  <%= f.action :submit %>
<% end %>
