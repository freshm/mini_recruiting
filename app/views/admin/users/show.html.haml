.row
  = render "admin/sidebar"
  .col-md-10
    .row
      .page-header
        %h1= @user.fullname
      .col-md-6
        %h2 Details
        %p
          %b Firstname:
          = @user.firstname

        %p
          %b Lastname:
          = @user.lastname

        %p
          %b Email:
          = @user.email
      .col-md-6
        - if !@user.admin? && @user.job_applications.any?
          %h2 Applicant for:
          %ul.list-group
            - @user.job_applications.each do |jAp|
              %li.list-group-item= link_to jAp.vacancy.title, jAp.vacancy
      %br
      .row.col-md-offset-4
        = link_to admin_root_path, class: "btn btn-default btn-lg" do
          %span.icon-arrow-left
          Back

        = link_to edit_admin_user_path(@user), class: "btn btn-primary btn-lg" do
          %span.icon-edit
          Edit