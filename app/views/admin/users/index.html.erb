<div class="row">
  <%= render "admin/sidebar" %>
  <div class="col-md-10">
    <div class="page-header">
      <h1>Listing Users</h1>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Type</th>
                <th>Delete Profile</th>
          </tr>
        </thead>
    
        <tbody>
            <%= content_tag_for(:tr, @users) do |user| %>
                <td><%= link_to user.firstname, admin_user_path(user)%></td>
                <td><%= link_to user.lastname, admin_user_path(user) %></td>
                <td><%= link_to user.email, admin_user_path(user) %></td>
                <td><%= link_to user.type, edit_admin_user_path(user) %></td>
                <td><%= link_to 'Delete', [:admin, user], class: "text-center",
                                                          method: :delete,
                                                          data: { confirm: 'Are you sure?' } unless user.admin? %></td>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>