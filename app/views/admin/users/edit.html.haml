.row
  = render "admin/sidebar"
  .col-md-10
    .page-header
      %h1 Edit
      = @user.fullname
    = render "form"
    %br
    .row.col-md-offset-4
      = link_to admin_root_path, class: "btn btn-default btn-lg" do
        %span.icon-arrow-left
        Back
      = link_to [:admin, @user], class: "btn btn-lg btn-info" do
        %span.icon-eye-open
        Show