<div class="row">
  <%= render "admin/sidebar" %>
  <div class="col-md-10">
    <div class="page-header">
      <h1><%= @advertisement.title %></h1>
    </div>
    
    <dl class="dl-horizontal">
    
      <dt>Location:</dt>
      <dd><%= @advertisement.location %></dd>
    
      <dt>Requirement:</dt>
      <dd><%= @advertisement.requirement %></dd>

      <dt>Description:</dt>
      <dd><%= @advertisement.description %></dd>
    </dl>
    <div class="row col-md-offset-4">
      <%= link_to admin_advertisement_path, :class => 'btn btn-default btn-lg' do %>
          <span class="icon-arrow-left"></span>
          Back
        <% end %>
        <%= link_to edit_admin_advertisement_path(@advertisement), :class => 'btn btn-lg btn-info' do %>
          <span class="icon-edit"></span>
          Edit
      <% end %>
    </div>
  </div>
</div>