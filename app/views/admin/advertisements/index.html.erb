<div class="row">
  <%= render "admin/sidebar" %>
  <div class="col-md-10">
    <div class="page-header">
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to new_admin_advertisement_path, :class => 'btn btn-primary pull-right' do %>
          <span class="glyphicon glyphicon-plus"></span>
          New Advertisement
        <% end %>
      <% end %>
      <h1>Current advertisements</h1>
    </div>
    
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Description</th>
                <th>Requirement</th>
                <th class="text-center">Destroy Advertisement</th>
          </tr>
        </thead>
    
        <tbody>
          <tr>
            <%= content_tag_for(:tr, @advertisements) do |advertisement| %>
                  <td><%= link_to advertisement.title, [:admin, advertisement] %></td>
                  <td><%= link_to advertisement.location, [:admin, advertisement] %></td>
                  <td><%= link_to advertisement.description, [:admin, advertisement] %></td>
                  <td><%= link_to advertisement.requirement, [:admin, advertisement] %></td>
                  <td><%= link_to 'Destroy', [:admin, advertisement], class: "text-center",
                                                                      method: :delete,
                                                                      data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>