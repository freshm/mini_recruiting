<div class="row">
  <%= render "admin/sidebar" %>
  <div class="col-md-10">
    <div class="page-header">
      <h1>Editing advertisement</h1>
    </div>
    
    <%= render 'form' %>
    <br />
    <div class="row col-md-offset-4">
      <%= link_to admin_advertisement_path, :class => 'btn btn-default btn-lg' do %>
          <span class="glyphicon glyphicon-info-sign"></span>
          Back
        <% end %>
        <%= link_to [:admin, @advertisement], :class => 'btn btn-lg btn-info' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          Show
      <% end %>
    </div>
  </div>
</div>