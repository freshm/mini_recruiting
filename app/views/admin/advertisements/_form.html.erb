<%= semantic_form_for([:admin, @advertisement], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @advertisement.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@advertisement.errors.count, "error") %> prohibited this advertisement from being saved:</h4>

      <ul>
      <% @advertisement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.inputs do %>
      <%= f.input :title %>
      <%= f.input :location %>
      <%= f.input :requirement %>
      <%= f.input :description, :input_html => { :class => 'autogrow', :rows => 12, :cols => 40 }%>
  <% end %>
  <br />
  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
  <% end %>
  
<% end %>
